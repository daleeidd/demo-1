.Media
  display: flex
  align-items: flex-start
  margin-bottom: 1em
  padding: 1em

.Media-Figure
  width: 30%
  margin-right: 1em
  @media $media.min-lg
    margin-right: 2em

.Media-Image
  height: 100%
  width: 100%
  object-fit: cover

.Media-Body
  flex: 1
  padding-left: 1em
  &, > :last-child
    margin-bottom: 0

.Media-Title
  margin-top: 0

.Media--VerticalCentered
  align-items: center

.Media--HorizontalCentered
  justify-content: center
  > .Media-Body
    flex: none

.Media--Centered
  @extend .Media--VerticalCentered
  @extend .Media--HorizontalCentered

.Media--Reverse > .Media-Figure
  order: 1
  margin: 0 0 0 1em

.Media--Stack
  display: block
  > .Media-Figure
    margin-right: 0
    max-width: 100%
    width: 100%
    margin-bottom: 1em
  > .Media-Body
    padding-left: 0
  for $size in $media-sizes
    &-{$size}
      @media $media[$size]
        display: block
        > .Media-Figure
          margin-right: 0
          margin-bottom: 2rem
          max-width: 100%
          width: 100%
        > .Media-Body
          padding-left: 0
